{
	"name": "rollup-starter-app",
	"devDependencies": {
		"@babel/core": "^7.6.4",
		"@babel/preset-env": "^7.6.3",
		"@babel/preset-react": "^7.6.3",
		"babel-eslint": "^10.0.3",
		"commander": "^3.0.2",
		"eslint": "^6.5.1",
		"eslint-config-prettier": "6.4.0",
		"eslint-plugin-prettier": "3.1.1",
		"eslint-plugin-react": "^7.16.0",
		"husky": "^3.0.9",
		"lint-staged": "^9.4.2",
		"npm-run-all": "^4.1.5",
		"prettier": "1.18.2",
		"rollup": "^1.16.2",
		"rollup-plugin-babel": "^4.3.3",
		"rollup-plugin-commonjs": "^10.0.0",
		"rollup-plugin-livereload": "^1.0.4",
		"rollup-plugin-node-resolve": "^5.1.0",
		"rollup-plugin-postcss": "^2.0.3",
		"rollup-plugin-progress": "^1.1.1",
		"rollup-plugin-replace": "^2.2.0",
		"rollup-plugin-terser": "^5.0.0",
		"rollup-plugin-typescript2": "^0.24.3",
		"serve": "^11.0.2",
		"typescript": "^3.6.4"
	},
	"dependencies": {
		"@types/react": "^16.9.9",
		"@types/react-dom": "^16.9.2",
		"date-fns": "^1.30.1",
		"react": "^16.10.2",
		"react-dom": "^16.10.2"
	},
	"scripts": {
		"build": "node scripts/run.js build --typescript --postcss",
		"watch": "node scripts/run.js watch --typescript --live-reload --postcss",
		"dev": "npm-run-all --parallel start watch",
		"start": "serve public"
	},
	"lint-staged": {
		"*.{js,jsx}": [
			"eslint --fix",
			"git add"
		],
		"*.{json,md,scss,yaml,yml}": [
			"prettier --write",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"prettier": {
		"useTabs": true,
		"semi": false,
		"singleQuote": true,
		"bracketSpacing": true,
		"trailingComma": "es5",
		"printWidth": 160
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"node": true
		},
		"plugins": [
			"prettier",
			"react"
		],
		"extends": [
			"eslint:recommended",
			"plugin:react/recommended",
			"prettier"
		],
		"parser": "babel-eslint",
		"rules": {}
	}
}
